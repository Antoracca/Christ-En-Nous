# cloudbuild.yaml
steps:
  # Étape 1: Build de l'image Docker
  - name: 'gcr.io/cloud-builders/docker'
    args: [
      'build',
      '-t', 'gcr.io/$PROJECT_ID/email-api:$BUILD_ID',
      '-t', 'gcr.io/$PROJECT_ID/email-api:latest',
      '.'
    ]

  # Étape 2: Push de l'image vers Container Registry
  - name: 'gcr.io/cloud-builders/docker'
    args: ['push', 'gcr.io/$PROJECT_ID/email-api:$BUILD_ID']

  - name: 'gcr.io/cloud-builders/docker'
    args: ['push', 'gcr.io/$PROJECT_ID/email-api:latest']

  # Étape 3: Déploiement sur Cloud Run
  - name: 'gcr.io/google.com/cloudsdktool/cloud-sdk'
    entrypoint: 'gcloud'
    args: [
      'run', 'deploy', 'email-api',
      '--image', 'gcr.io/$PROJECT_ID/email-api:$BUILD_ID',
      '--region', 'europe-west1',
      '--platform', 'managed',
      '--allow-unauthenticated',
      '--port', '3000',
      '--memory', '512Mi',
      '--cpu', '1',
      '--max-instances', '10',
      '--timeout', '300s'
    ]

# Images produites
images:
  - 'gcr.io/$PROJECT_ID/email-api:$BUILD_ID'
  - 'gcr.io/$PROJECT_ID/email-api:latest'

# Options de build
options:
  logging: CLOUD_LOGGING_ONLY
  machineType: 'E2_HIGHCPU_8'

# Timeout total du build
timeout: '1200s'
