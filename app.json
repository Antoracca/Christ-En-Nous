{
  "expo": {
    "name": "christ-en-nous",
    "slug": "christ-en-nous",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "christennous",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
   "ios": {
  "supportsTablet": true,
  "infoPlist": {
    "NSFaceIDUsageDescription": "Cette application utilise Face ID pour une connexion rapide et sécurisée."
  }
},
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.christennous"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
  "expo-router",
  [
    "expo-splash-screen",
    {
      "image": "./assets/images/splash-icon.png",
      "imageWidth": 200,
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    }
  ],
  "expo-font",
  "expo-localization",
  "expo-secure-store",
  [
    "expo-local-authentication",
    {
      "faceIDPermission": "Allow Christ En Nous to use Face ID for secure authentication."
    }
  ]
],
  "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "5104b94d-a5c8-4754-b8b3-b548bf72e3fe"
      }
    },
    "owner": "koueni12"
  }
}
