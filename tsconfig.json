{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": [
      "jest"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "@assets/*": [
        "assets/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./app/types"
    ]
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "assets/**/*.json",
    "firebase-auth.d.ts",
    "app/types/declaration.d.ts"
  ],
  "exclude": [
    "node_modules",
    "app/screens/**/*"
  ]
}
