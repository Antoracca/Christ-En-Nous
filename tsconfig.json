{
  "extends": "./node_modules/expo/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
     "types": ["jest"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@assets/*": ["assets/*"]
    },

    "typeRoots": [
      "./node_modules/@types",
      "./app/types"
    ]
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "assets/**/*.json",
    "expo-env.d.ts",
    "firebase-auth.d.ts",
    "app/types/declaration.d.ts",
    ".expo/types/**/*.ts"
  ]
}
